@using Exernet.Models
@using Microsoft.AspNet.Identity
@model IEnumerable<Exernet.Models.ApplicationUser>

@foreach (var user in Model)
{
    <div class="item col-md-12" id="user_@user.UserName">
        <div class="row">
            <div class="col-md-8">
                <div class="col-md-2">
                    @if (user.ProfileFotoURL != null)
                    {<img class="img-circle img-responsive" src="@user.ProfileFotoURL" />}
                    else
                    {<img class="img-circle img-responsive" src="http://res.cloudinary.com/goodcloud/image/upload/v1407491904/Exernet/blue-user-icon.png" />}
                </div>
                <div class="col-md-10">
                    <div class="col-md-7">
                        <h4>@Html.ActionLink(user.UserName, "Details", "User", routeValues: new { id = user.UserName }, htmlAttributes: new { title = String.Format(@Resources.Resource.AccountPg + " \"{0}\"", user.UserName) })</h4>
                        <span class="glyphicon glyphicon-star"></span> @user.Rating
                        <div id="changeRole_@user.UserName">
                            @if (user.IsAdmin)
                            {
                                <h6>@Resources.Resource.Administrator</h6>
                                //Html.RenderAction("MakeHimUser", "User", @user.UserName);
                                //@Html.ActionLink(@Resources.Resource.ChangeRole,"MakeHimUser", "User", new { username = @user.UserName,parentname=User.Identity.Name }, new { @class = "btn btn-info btn-xs", title = @Resources.Resource.MakeHimUser})
                                //Html.RenderPartial("ChangeRole/_ChangeRoleForUser", @user.UserName);
                            }
                            else
                                if(User.Identity.IsAuthenticated)
                            {
                                <h6>@Resources.Resource.User</h6>
                                //Html.RenderAction("MakeHimAdmin", "User", @user.UserName);
                                //@Html.ActionLink(@Resources.Resource.ChangeRole,"MakeHimAdmin", "User", new { username = @user.UserName,parentname=User.Identity.Name }, new { @class = "btn btn-info btn-xs", title = @Resources.Resource.MakeHimAdmin})
                                //Html.RenderPartial("ChangeRole/_ChangeRoleForAdmin", @user.UserName);
                            }
                        </div>
                        @if (user.LockoutEnabled)
                        {
                            <p>@Resources.Resource.UserBlocked @user.LockoutEndDateUtc</p>
                        }
                    </div>
                    <div class="col-md-5">

                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="row">
                    <div class="col-md-10" align="right">
                    </div>
                    <div class="col-md-2">
                        @if(User.IsInRole("Administrator"))
                        {
                            <button type="button" class="close" onclick="deleting('@user.UserName')" data-toggle="tooltip" data-placement="top" title="" data-original-title="Delete"><span aria-hidden="true">&times;</span><span class="sr-only">Delete</span></button>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
}

<script type="text/javascript">
    function deleting(username){
        $.ajax({
            url: "http://localhost:54084/User/Delete",
            dataType: "json",
            type: "POST",
            data: { id: username },
            success: function (data) {
                $("#user_" + data).remove();
            },
            error: function (e) {
                alert("cannot delete this user");
            }
        });
    }
    function changeRoleToAdmin(username) {
        $.ajax({
            url: "http://localhost:54084/User/MakeHimAdmin",
            dataType: "json",
            type: "POST",
            data: { id: username },
            success: function (data) {
                $("#userInfo_" + username).remove();
                document.getElementById("changeRole_" + username).innerHTML = data;
            },
            error: function (e) {
                alert("cannot change user role");
            }
        }).done(function (data) {
            $("#adminInfo_" + username).remove();
            document.getElementById("changeRole_" + username).innerHTML = data;
        });
    }
    function changeRoleToUser(username) {
        $.ajax({
            url: "http://localhost:54084/User/MakeHimUser",
            dataType: "json",
            type: "POST",
            data: { id: username },
            success: function (data) {
                $("#adminInfo_" + username).remove();
                document.getElementById("changeRole_" + username).innerHTML = data;
            },
            error: function (e) {
                alert("cannot change user role");
            }
        }).done(function (data) {
            $("#adminInfo_" + username).remove();
            document.getElementById("changeRole_" + username).innerHTML = data;
        });
    }
</script>
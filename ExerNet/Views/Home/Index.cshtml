@{
    ViewBag.Title = Resources.Resource.HomePage;
}

<h2>Exernet</h2>
<div class="row">
    <div class="col-md-8">
        <ul class="nav nav-tabs" role="tablist" style="margin-bottom: 15px;">
            <li class="active"><a href="#tasksByUpload" role="tab" data-toggle="tab">@Resources.Resource.NewTasks</a></li>
            <li class=""><a href="#tasksByPopularity" role="tab" data-toggle="tab">@Resources.Resource.PopularTasks</a></li>
            <li class=""><a href="#usersOnHomepage" role="tab" data-toggle="tab">@Resources.Resource.Top10</a></li>
        </ul>
        <div id="content" class="tab-content">
            <div class="tab-pane fade active in" id="tasksByUpload">
                @{Html.RenderAction("ViewTasksOrderedByUploadDate", "Task");}
            </div>
            <div class="tab-pane fade" id="tasksByPopularity">
                @{Html.RenderAction("ViewTasksOrderedByPopularity", "Task");}
            </div>
            <div class="tab-pane fade" id="usersOnHomepage">
                @{Html.RenderAction("ViewAllUsers", "User");}
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div id="GetTag">
            @Html.Action("GetTag", "Task")
        </div>
    </div>
</div>
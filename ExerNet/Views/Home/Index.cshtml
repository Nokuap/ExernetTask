@model IEnumerable<Exernet.Models.ExernetTask>
@{
    ViewBag.Title = Resources.Resource.HomePage;
}

<h2>Exernet</h2>


<ul class="nav nav-tabs" role="tablist" style="margin-bottom: 15px;">
    <li class="active"><a href="#tasksByUpload" role="tab" data-toggle="tab">@Resources.Resource.Tasks</a></li>
    <li class=""><a href="#tasksByPopularity" role="tab" data-toggle="tab">@Resources.Resource.Solutions</a></li>
    <li class=""><a href="#usersOnHomepage" role="tab" data-toggle="tab">@Resources.Resource.Users</a></li>
</ul>

<div id="content" class="tab-content">
    <div class="tab-pane fade active in" id="tasksByUpload">
        <div id="postswrapper">
            @if (Model.Count() > 0)
            {
                Html.RenderAction("ViewListOfTasks", "User", new { Model = Model });
            }
            else
            {
                <p>@Html.Raw(Resources.Resource.NoYourTasks)</p>
            }
            <div id="loadmoreajaxloader" style="display:none;"><center><img src="~/Scripts/ajax-loader.gif" /></center></div>
        </div>
    </div>
    <div class="tab-pane fade" id="tasksByPopularity">
        <div id="postswrapper">
            @if (Model.Count() > 0)
            {
                Html.RenderAction("ViewListOfTasks", "User", new { Model = Model });
            }
            else
            {
                <p>@Html.Raw(Resources.Resource.NoYourTasks)</p>
            }
            <div id="loadmoreajaxloader" style="display:none;"><center><img src="~/Scripts/ajax-loader.gif" /></center></div>
        </div>
    </div>
    <div class="tab-pane fade" id="usersOnHomepage">
        <div id="postswrapper">
            @if (Model.Count() > 0)
            {
                Html.RenderAction("ViewListOfTasks", "User", new { Model = Model });
            }
            else
            {
                <p>@Html.Raw(Resources.Resource.NoYourTasks)</p>
            }
            <div id="loadmoreajaxloader" style="display:none;"><center><img src="~/Scripts/ajax-loader.gif" /></center></div>
        </div>
    </div>
</div>